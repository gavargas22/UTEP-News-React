<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site" method="upgrade">
		<name>Real Time UTEP News Component for Joomla!</name>
		<author>Guillermo Vargas</author>
		<version>0.0.2</version>
		<description>This module connects to the news.utep.edu and retrieves and displays the latest news.</description>
		<updateservers>
	    <server type="collection">http://skunkworks.at.utep.edu/updates/mod_utepnews.xml</server>
		</updateservers>
		<media folder="media" destination="mod_utepnews">
			<folder>assets</folder>
		</media>
		<files>
				<folder>assets</folder>
				<filename>mod_utepnews.xml</filename>
				<filename module="mod_utepnews">mod_utepnews.php</filename>
				<filename>index.html</filename>
				<filename>helper.php</filename>
				<filename>tmpl/default.php</filename>
				<filename>tmpl/index.html</filename>
		</files>
		<config>
			<fields name="params">
				<fieldset name="basic">

					<field name="headerType" type="radio" default="0" label="Select Header Type" description="" class="btn-group">
						<option value="0">1 Header</option>
						<option value="1">2 Headers</option>
					</field>

					<field name="h1" type="text" size="50" label="Header 1" description="Website's First Header"/>
					<field name="h2" type="text" size="50" label="Header 2" description="Website's Second Header"/>
				</fieldset>
			</fields>
		</config>
</extension>
